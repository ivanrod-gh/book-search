<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card border-primary">
      <div class="card-body" align="center">
        <h2><%= t('.header') %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <p>
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
            </p>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div><%= t('.awaiting_confirmation', email: resource.unconfirmed_email) %></div>
            <% end %>
            <p>
              <%= f.label :password %> <i><%= t('.field_can_be_blank') %></i>
              <% if @minimum_password_length %>
                <em>(<%= t('.minimum_password_length', length: @minimum_password_length) %>)</em>
              <% end %>
              <br />
              <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
            </p>
            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
            </p>
            <p>
              <%= f.label :current_password, t('.current_password') %> <i><%= t('.current_password_info') %></i><br />
              <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
            </p>
            <p>
              <%= f.submit t('.update'), class: 'btn btn-primary' %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center pt-2">
  <div class="col-md-6 col-lg-5">
    <div class="card border-primary">
      <div class="card-body" align="center">
        <h3><%= t('.cancel') %></h3>
        <p><%= t('.unhappy') %> <%= button_to t('.cancel_current_account'), registration_path(resource_name), data: { confirm: t('.cancel_confirmation') }, class: 'btn btn-primary', method: :delete %></p>
      </div>
    </div>
  </div>
</div>
