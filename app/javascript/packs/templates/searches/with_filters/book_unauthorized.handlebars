<div class="result-book-{{book.id}}">
  <div class="row">
    <div class="col-sm-1">{{#if book.litres_book_rating}}{{book.litres_book_rating.average}} ({{book.litres_book_rating.votes_count}}){{else}}-{{/if}}</div>
    <div class="col-sm-1">{{#if book.livelib_book_rating}}{{book.livelib_book_rating.average}} ({{book.livelib_book_rating.votes_count}}){{else}}-{{/if}}</div>
    <div class="col-sm-4"><a href="{{#if book.int_id}}http://www.litres.ru/pages/biblio_book/?art={{book.int_id}}{{else}}#{{/if}}">{{#if book.name}}{{book.name}}{{else}}-{{/if}}</a><em style="font-size: 0.75em;">{{#if book.genre_names}} ({{book.genre_names}}){{/if}}</em></div>
    <div class="col-sm-1" align='center'>{{#if book.writing_year}}{{book.writing_year}}{{else}}-{{/if}}</div>
    <div class="col-sm-1" align='center'>{{#if book.pages_count}}{{book.pages_count}}{{else}}-{{/if}}</div>
    <div class="col-sm-1" align='center'>{{#if book.comments_count}}{{book.comments_count}}{{else}}-{{/if}}</div>
    <div class="col-sm-3">
      {{#each book.authors}}
        <div>
          <a href="{{#if this.url}}https://www.litres.ru/author/{{this.url}}{{else}}#{{/if}}">{{#if this.name}}{{this.name}}{{else}}-{{/if}}</a>
        </div>
      {{/each}}
    </div>
  </div>
</div>
